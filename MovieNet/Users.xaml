<UserControl x:Class="MovieNet.Users"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieNet.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="239.2" d:DesignWidth="300"
             DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=UserVm}">
    <Grid>

        <StackPanel HorizontalAlignment="Left" Height="165" Margin="10,10,0,0" VerticalAlignment="Top" Width="280" >
            <ListView HorizontalAlignment="Left" Height="82" Margin="10,0,0,0" Width="260" ItemsSource="{Binding Utilisateurs}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding nom_utilisateur}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBox Height="23" TextWrapping="Wrap" Margin="10,10,160,0" Text="{Binding Utilisateur.nom_utilisateur}" />
            <TextBox Height="23" TextWrapping="Wrap" Margin="10,10,160,0" Text="{Binding Utilisateur.prenom_utilisateur}"/>
            <Button Content="Button"  Margin="150,-55,10,0" Command="{Binding Add}"/>
        </StackPanel>
    </Grid>
</UserControl>
