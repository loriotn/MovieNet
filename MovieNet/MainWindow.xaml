<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieNet"
        xmlns:ServiceReference1="clr-namespace:MovieNet.ServiceReference1"
        x:Class="MovieNet.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800"
        DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=MainVm}">
    <Grid>
        <TextBox Text="{Binding ToSearch}" HorizontalAlignment="Left" Height="23" Margin="551,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="231" BorderBrush="Black"/>
        
        <ListBox ItemsSource="{Binding Utilisateurs}" Margin="10,10,541,10" SelectedItem="{Binding utilisateur}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Width="50" FontWeight="Bold" Text="{Binding nom_utilisateur}" />
                        <TextBlock Width="50"  Text="{Binding prenom_utilisateur}" />
                        <TextBlock Width="50" FontSize="10" Text="{Binding id_utilisateur}" />
                        <Button Content="selected user"></Button>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="{Binding utilisateur.prenom_utilisateur}" HorizontalAlignment="Left" Margin="246,12,0,0" VerticalAlignment="Top" Width="193"/>
        <Button Content="Changer d'utilisateur" HorizontalAlignment="Left" Margin="648,10,0,0" VerticalAlignment="Top" Width="134" Command="{Binding Delete}"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="707,63,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Search}"/>

    </Grid>
</Window>
